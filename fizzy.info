name = Fizzy
description = A responsive theme for Fuzion sites, using Bootstrap.
core = 7.x
base theme = bootstrap

project = fizzy
project status url = https://projects.fuzion.co.nz/release-history
; version = "7.x-1.0"

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[searchbox]      = 'Search Box'
regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[above_content]  = 'Above Content'
regions[content]        = 'Content'
regions[below_content]  = 'Below Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer_first]   = 'Footer 1'
regions[footer_second]  = 'Footer 2'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'js/bootstrap-toolkit.min.js'
scripts[] = 'js/fizzy.js'

